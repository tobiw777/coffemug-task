{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "incremental": true,
    "isolatedModules": true,
    "noUncheckedIndexedAccess": true,
    "outDir": "dist",
    "paths": {
      "@src/*": [
        "./src/*"
      ],
      "@application/*": [
        "./src/application/*"
      ],
      "@domain/*": [
        "./src/domain/*"
      ],
      "@infrastructure/*": [
        "./src/infrastructure/*"
      ]
    },
    "sourceMap": true
  }
}
